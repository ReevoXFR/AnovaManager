<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.osiris.testapp">

    <!-- To auto-complete the email text field in the login form with Useruser's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CompanyO_Login"
            android:label="@string/Company_Owner_Intent" />
        <activity
            android:name=".Employee_Login"
            android:label="@string/Employee_Intent" />
        <activity android:name=".checkEmployee" />
        <activity
            android:name=".SeeShifts2"
            android:label="See Shifts" />
        <activity
            android:name=".Employee_Account"
            android:label="Add a Shift" />
        <activity android:name=".CreateUser" />
        <activity
            android:name=".CompanyO_Account"
            android:label="Manage Employees" />
        <activity android:name=".Reset_Password" />
        <activity
            android:name=".AccountSettings"
            android:label="Account Settings" />
        <activity
            android:name=".EmployeeCreate"
            android:label="Add Employee" />
        <activity
            android:name=".CompanyCreate"
            android:label="Create a company"></activity>
        <activity android:name=".ShiftSettings"></activity>
    </application>

</manifest>