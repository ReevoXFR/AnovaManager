<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osiris.testapp.Account_ActivityEmployee"
    android:background="@drawable/background_gradient">


    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Current week no."
        android:id="@+id/weekNo"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/weekNo"
        android:text="          Start            Hour      -     Min"
        android:id="@+id/start"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/start"
        android:id="@+id/empty"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/empty"
        android:text="          End            Hour      -     Min"
        android:id="@+id/end"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/weekNo"
        android:text="Monday"
        android:id="@+id/monday"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/monday"
        android:text="Tuesday"
        android:id="@+id/tuesday"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tuesday"
        android:text="Wednesday"
        android:id="@+id/wednesday"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/wednesday"
        android:text="Thursday"
        android:id="@+id/thursday"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/thursday"
        android:text="Friday"
        android:id="@+id/friday"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/friday"
        android:text="Saturday"
        android:id="@+id/saturday"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/saturday"
        android:text="Sunday"
        android:id="@+id/sunday"/>


    <Button
        android:id="@+id/logoutButtonEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984" />
</android.support.constraint.ConstraintLayout>
